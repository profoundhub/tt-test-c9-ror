<div class="jumbotron">
  <p id="notice"><%= notice %></p>

  <h1>Friends</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Aka</th>
        <th>Vip</th>
        <th>Fps</th>
        <th>Floors</th>
        <th>Daily</th>
        <th>Active</th>
        <th>Rebuild</th>
        <th>Requests</th>
        <th>Time</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.name %></td>
          <td><%= friend.code %></td>
          <td><%= friend.aka %></td>
          <td><%= friend.vip %></td>
          <td><%= friend.fps %></td>
          <td><%= friend.floors %></td>
          <td><%= friend.daily %></td>
          <td><%= friend.active %></td>
          <td><%= friend.rebuild %></td>
          <td><%= friend.requests %></td>
          <td><%= friend.time %></td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <hr>
  <br>

  <%= link_to 'New Friend', new_friend_path, class: "btn btn-success" %>
</div>
